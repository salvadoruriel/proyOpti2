#		if screen.parent: screen.focused = self

<BackgroundColor@Widget>
	pos_hint: {'center_x': .5, 'center_y': .5}
	size_hint: .9, .9
	canvas.before:
		Color:
			rgba: .2, .3, .4, 1
		Rectangle:
			size: self.size
			pos: self.pos
